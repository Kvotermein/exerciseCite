.specialize
 	background-color #242424

.specialize__container
	display flex
	justify-content space-between
	margin 0 auto
	max-width 960px

.container
	width 300px
	height 180px
	margin 20px 0
	text-align center
	line-height 180px		
.special__onsale
	background url(../img/shoes.jpg) no-repeat
	background-size cover
	background-position center center
	transition background-position	1s
	&:hover
		background-position top
.special__offers
	background url(../img/specialoffer.jpg) center center no-repeat
	background-size cover
	transition background-position	1s
	&:hover
		background-position top
.special__musthave
	background url(../img/musthave.jpg) center center no-repeat
	background-size cover
	transition background-position	1s
	&:hover
		background-position top

p.special__text
	display inline
	text-transform uppercase
	font-size 2rem
	color lightColor
	padding 10px
	background-color rgba(#000, .7)
