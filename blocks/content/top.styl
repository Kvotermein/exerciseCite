.top
	height 550px
	width 100%
	display flex
	justify-content center
.slider__images
	list-style-type none
	overflow  hidden
.slider
	width 100%
.img {
	opacity 0.1
}
.img.active {
	height 460px
	background url(../img/img.jpg) 
	// background-size cover
	background-position center center
	transition-property opacity
	opacity 1
	transition-duration 2s
}

.slider__menu
	display flex
	justify-content center
	height 90px
	width 100%
	background-color #2e2e2e

.firstbtn
	height 90px
	width 190px
	color gray
	cursor pointer
	&:hover
		color lightColor
		.firstbtn__bar
			background-color #57c5a0
.firstbtn.active
	color lightColor
	.firstbtn__bar
		background-color #57c5a0	
.firstbtn__bar.noborder
	border-left 0
.firstbtn__bar
	height 10px
	width 100%
	margin-top 5px
	background-color black
	border-left 2px solid gray

.firstbtn__text
	margin-top 20px
	text-align center