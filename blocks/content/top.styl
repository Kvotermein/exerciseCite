.top
	height 550px
	width 100%
	display flex
	justify-content center
.slider__images
	list-style-type none
	overflow  hidden
.slider
	width 100%
.img {
	opacity 0.1
}
.img.active {
	position relative
	height 460px
	background url(../img/img.jpg) 
	// background-size cover
	background-position center center
	transition-property opacity
	opacity 1
	transition-duration 2s
}

.slider__menu
	display flex
	justify-content center
	height 90px
	width 100%
	background-color #2e2e2e

.firstbtn
	height 90px
	width 190px
	color gray
	cursor pointer
	&:hover
		color lightColor
		.firstbtn__bar
			background-color #57c5a0
.firstbtn.active
	color lightColor
	.firstbtn__bar
		background-color #57c5a0	
.firstbtn__bar.noborder
	border-left 0
.firstbtn__bar
	height 10px
	width 100%
	margin-top 5px
	background-color black
	border-left 2px solid gray

.firstbtn__text
	margin-top 20px
	text-align center
	
.info
	position absolute
	width 350px
	height 350px
	right 15%
	top calc(50% - 175px)
.info__price
	width 80px
	height 80px
	background-color #57c5a0
	text-align center
	font-size 1rem
	line-height 80px
	color lightColor
	margin-bottom 15px
.info-big
	font-size 2rem
.info-small
	font-size 1.5rem
	margin-bottom 20px
.info-user-bar
	width 170px
	display flex
	justify-content space-between

.bar__user-look
	width 40px
	height 40px
	background url(../img/look.png) center no-repeat white

.bar__user-star
	width 40px
	height 40px
	background url(../img/star.png) center no-repeat white

.bar__user-exit
	width 40px
	height 40px
	background url(../img/exit.png) center no-repeat white

.bar__user-basket
	width 40px
	height 40px
	background url(../img/Cart-icon.png) center no-repeat white
