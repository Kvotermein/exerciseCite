.arrivals,.best
	display flex
	flex-direction column
	justify-content space-between
	max-width 960px
	margin 0 auto
	
.arrivals__top,.best__top
	display flex
	justify-content space-between
	margin 30px 0
.arrivals__btn,.best__btn
	cursor pointer
	width 100px
	height 30px
	text-align center
	line-height 30px
	border 1px solid gray
.arrivals__content,.best__content
	display flex
	justify-content space-between
	
.descriptional__name-acitve
	display none
	
.arrivals__item,.best__item
	position relative
	width 300px
	height 270px
	background-color white
	&:hover
		.descriptional__name-acitve
			display block
			margin-top 10px
			margin-left 10px
		.descriptional__name
			display none
.content-shoes1
	background url(../img/shoes1.jpg) 0 0 no-repeat white
	background-size 40%
	background-position center center

	
.arrivals__descriptional,.best__descriptional
	text-align center
	position absolute
	display flex
	bottom 0
	width 100%
	border-top 1px solid gray
	
	.descriptional__price
		color lightColor
		line-height 75px
		width 65px
		height 65px
		background-color #57c5a0
		margin-top -10px
		margin-left 10px
		
	.descriptional__name
		margin-left 10px
		line-height 55px
